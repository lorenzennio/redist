# Matplotlib style file
# Adapted from
# https://stash.desy.de/projects/BT/repos/b2plot/browse/stylelib/belle2.mplstyle

# General Settings
figure.figsize      : 8.0, 5.5
figure.facecolor    : white
text.color          : .1

# Fonts

font.size           : 20
xtick.labelsize     : 15
ytick.labelsize     : 15
axes.labelsize      : 22
legend.fontsize     : 15

axes.labelcolor     : .1

text.usetex         : True
font.family         : serif, sans-serif
font.serif          : Latin Modern Roman, DejaVu Serif
font.sans-serif     : Latin Modern Roman Sans, DejaVu Sans

# Text in math mode
mathtext.cal        : cursive
mathtext.rm         : serif
mathtext.tt         : monospace
mathtext.it         : serif:italic
mathtext.bf         : serif:bold
mathtext.sf         : sans
mathtext.fontset    : cm       # Should be 'dejavusans' (default),
                               # 'dejavuserif', 'cm' (Computer Modern), 'stix',
                               # 'stixsans' or 'custom'
mathtext.fallback : cm  # When True, use symbols from the Computer Modern
                        # fonts when a symbol can not be found in one of
                        # the custom math fonts.

mathtext.default : regular  # The default font to use for math.
                       # Can be any of the LaTeX font names, including
                       # the special name "regular" for the same font
                       # used in regular text.


legend.frameon: True
legend.edgecolor: white
legend.framealpha: 1
legend.numpoints: 1
legend.scatterpoints: 1


# Ticks

xtick.direction: in
ytick.direction: in
xtick.color: .1
ytick.color: .1
xtick.minor.visible : True
ytick.minor.visible : True
ytick.left          : True
ytick.right         : True
xtick.top           : True
xtick.bottom        : True
xtick.major.size: 6
ytick.major.size: 6
xtick.minor.size: 3
ytick.minor.size: 3

xtick.major.pad      : 6.
ytick.major.pad      : 6.
axes.axisbelow: False
image.cmap: viridis

grid.linestyle: -
lines.solid_capstyle: round

axes.grid: False
axes.facecolor: white
axes.edgecolor: .0
axes.linewidth: 1.2
axes.formatter.limits : -4, 4
axes.prop_cycle: cycler('color', ['348ABD','E24A33', '988ED5', '777777', 'FBC15E', '8EBA42', 'FFB5B8'])
axes.formatter.use_mathtext : True
axes.formatter.useoffset      : True
axes.formatter.offset_threshold : 80
axes.labelpad       : 6.0
axes.autolimit_mode : data

# axes.xmargin:   .01
# axes.ymargin:   .01

grid.color: .8

errorbar.capsize :  0
